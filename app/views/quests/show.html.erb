<% content_for :title, @quest.name %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice" data-testid="notice"><%= notice %></p>
  <% end %>

  <div class="flex flex-col sm:flex-row justify-between items-start mb-8">
    <h1 class="font-bold text-3xl text-gray-800">Quest Details</h1>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 p-6 mb-6">
    <div class="flex flex-col xs:flex-row justify-between items-start gap-3 mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 <%= @quest.status? ? 'line-through' : '' %>" data-testid="quest-name"><%= @quest.name %></h2>
      <span class="px-3 py-1 rounded-full text-sm <%= @quest.status? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
        <%= @quest.status? ? "Completed" : "In Progress" %>
      </span>
    </div>
    
    <div class="mt-8 border-t pt-6 border-gray-100">
      <h3 class="text-lg font-medium text-gray-700 mb-4">Quest Status</h3>
      <p class="text-gray-600 mb-4">
        This quest is currently <strong><%= @quest.status? ? "completed" : "in progress" %></strong>.
      </p>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row gap-3 sm:space-x-3 w-full">
    <div class="mt-4 sm:mt-0 w-full sm:w-auto">
      <%= link_to "Back to quests", quests_path, class: "w-full sm:w-auto rounded-md px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium transition-colors duration-200 shadow-sm text-center inline-block" %>
    </div>
    <%= link_to "Edit quest", edit_quest_path(@quest), class: "w-full sm:w-auto rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition-colors duration-200 shadow-sm text-center" %>
    <%= button_to "Delete quest", @quest, method: :delete, class: "w-full sm:w-auto rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium transition-colors duration-200 shadow-sm cursor-pointer", data: { turbo_confirm: "Are you sure you want to delete this quest?" } %>
  </div>
</div>
