<% content_for :title, "Edit Quest - #{@quest.name}" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice" data-testid="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 mb-8">
    <div class="p-6">
      <div class="flex flex-col md:flex-row items-center space-y-4 md:space-y-0 md:space-x-6">
        <%= image_tag "mypic.jpg", class: "w-24 h-24 md:w-32 md:h-32 rounded-full object-cover" %>
        <div class="text-center md:text-left flex-grow">
          <div class="uppercase tracking-wide text-xs md:text-sm text-blue-600 font-semibold">Software Engineer Intern</div>
          <h2 class="mt-1 text-xl md:text-2xl font-bold text-gray-800">Bunyakorn Pornsombatpaibool (Goko)</h2>
          <p class="mt-2 text-sm md:text-base text-gray-600">@ Odds</p>
          <p class="mt-3 text-sm text-gray-600">Track my journey and achievements through these quests!</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "My Brags", brags_path, class: "rounded-md px-4 py-2 bg-blue-800 hover:bg-blue-500 text-white font-medium transition-colors duration-200 shadow-sm text-center", data: { testid: "brags-link" } %>
          <%= link_to "Back to quests", quests_path, class: "rounded-md px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium transition-colors duration-200 shadow-sm text-center" %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 p-6 mb-6">
    <div class="mb-6">
      <h1 class="font-bold text-2xl text-gray-800">Edit Quest</h1>
      <p class="text-gray-600 mt-2">Update your quest details below.</p>
    </div>

    <%= render "form", quest: @quest %>
  </div>

  <div class="flex flex-col sm:flex-row gap-3 sm:space-x-3 w-full">
    <%= link_to "View quest", @quest, class: "w-full sm:w-auto rounded-md px-4 py-2 bg-blue-800 hover:bg-blue-700 text-white font-medium transition-colors duration-200 shadow-sm text-center" %>
    <%= button_to "Delete quest", @quest, method: :delete, class: "w-full sm:w-auto rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium transition-colors duration-200 shadow-sm cursor-pointer", data: { turbo_confirm: "Are you sure you want to delete this quest?" } %>
  </div>
</div>
