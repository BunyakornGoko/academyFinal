<% content_for :title, "Quests" %>

<div class="w-full" data-testid="quests-container">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice" data-testid="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 mb-8">
    <div class="p-6">
      <div class="flex flex-col md:flex-row items-center space-y-4 md:space-y-0 md:space-x-6">
        <%= image_tag "mypic.jpg", class: "w-24 h-24 md:w-32 md:h-32 rounded-full object-cover" %>
        <div class="text-center md:text-left flex-grow">
          <div class="uppercase tracking-wide text-xs md:text-sm text-blue-600 font-semibold">Software Engineer Intern</div>
          <h2 class="mt-1 text-xl md:text-2xl font-bold text-gray-800">Bunyakorn Pornsombatpaibool (Goko)</h2>
          <p class="mt-2 text-sm md:text-base text-gray-600">@ Odds</p>
          <p class="mt-3 text-sm text-gray-600">Track my journey and achievements through these quests!</p>
        </div>
        <div class="flex space-x-3">
          <%= link_to "My Brags", brags_path, class: "rounded-md px-4 py-2 bg-blue-800 hover:bg-blue-500 text-white font-medium transition-colors duration-200 shadow-sm text-center", data: { testid: "brags-link" } %>
          <%= link_to "New quest", new_quest_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition-colors duration-200 shadow-sm text-center md:h-10", data: { testid: "new-quest-link" } %>
        </div>
      </div>
    </div>
  </div>

  <div id="quests" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-testid="quests-list">
    <% if @quests.any? %>
      <% @quests.each do |quest| %>
        <%= render "quest_card", quest: quest %>
      <% end %>
    <% else %>
      <div class="col-span-full bg-white rounded-lg shadow p-6 sm:p-10 text-center" data-testid="no-quests-message">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 sm:h-16 sm:w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m-6-8h6m-3-4v20m0-20l-4 4m4-4l4 4" />
        </svg>
        <p class="text-lg text-gray-600 mb-4">No quests found.</p>
        <p class="text-gray-500">Click "New quest" to create your first quest!</p>
      </div>
    <% end %>
  </div>
</div>
