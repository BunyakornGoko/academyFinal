<%= form_with(model: quest, class: "w-full") do |form| %>
  <% if quest.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 sm:px-4 sm:py-3 text-sm sm:text-base font-medium rounded-md mb-4 sm:mb-6">
      <h2 class="text-base sm:text-lg font-semibold"><%= pluralize(quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul class="list-disc ml-5 sm:ml-6 mt-1 sm:mt-2">
        <% quest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4 sm:mb-6">
    <%= form.label :name, "Quest Name", class: "block text-gray-700 font-medium mb-1 sm:mb-2 text-sm sm:text-base" %>
    <%= form.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 px-3 py-2 sm:px-4 text-sm sm:text-base #{quest.errors[:name].any? ? 'border-red-300' : ''}", placeholder: "Enter quest name" %>
    <% if quest.errors[:name].any? %>
      <p class="mt-1 text-xs sm:text-sm text-red-500"><%= quest.errors[:name].first %></p>
    <% end %>
  </div>

  <div class="mb-4 sm:mb-6">
    <div class="flex items-center">
      <%= form.check_box :status, class: "h-4 w-4 sm:h-5 sm:w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
      <%= form.label :status, "Mark as completed", class: "ml-2 block text-gray-700 font-medium text-sm sm:text-base" %>
    </div>
    <% if quest.errors[:status].any? %>
      <p class="mt-1 text-xs sm:text-sm text-red-500"><%= quest.errors[:status].first %></p>
    <% end %>
  </div>

  <div class="flex justify-end">
    <%= form.submit quest.new_record? ? "Create Quest" : "Update Quest", class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition-colors duration-200 shadow-sm cursor-pointer" %>
  </div>
<% end %>
